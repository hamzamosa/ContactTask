@page "/ContactDetails/{id}"

<h1 class="page-title">Details for @Contact.firstName @Contact.lastNmae</h1>
<div class="col-12 row">
 
    <div class="col-10 row">
        <div class="col-xs-12 col-sm-8">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Contact ID</label>
                <div class="col-sm-8">
                    <label type="text" class="form-control-plaintext">@Contact.id</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">First name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.firstName</label>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Last name</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.lastNmae</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.email</label>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Phone number</label>
                <div class="col-sm-8">
                    <label type="text" readonly class="form-control-plaintext">@Contact.phoneNumber</label>
                </div>
            </div>
        </div>
    </div>
</div>